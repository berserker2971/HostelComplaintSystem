@model HostelComplaintSystem.Models.Complaint

@{
    ViewData["Title"] = "Delete Complaint";
}

<h1 class="text-danger">Delete Confirmation</h1>
<h3>Are you sure you want to permanently delete this complaint?</h3>
<hr />
@if (!string.IsNullOrEmpty(Model.ImagePath))
{
    <div class="mb-3">
        <img src="@Model.ImagePath" style="width: 100%; max-width: 400px; border-radius: 5px;" alt="Complaint Image" />
    </div>
}

<div>
    <h4>Complaint Details</h4>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IssueType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IssueType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        
        <input type="submit" value="Yes, Delete" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div
