@model IEnumerable<HostelComplaintSystem.Models.Complaint>

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Dashboard</h1>
    <!-- Link to QR generator if you have it -->
    <a asp-controller="QrCode" asp-action="Index" class="btn btn-outline-primary">
        <i class="bi bi-qr-code"></i> Generate QR
    </a>
</div>

<!-- Filter Section -->
<div class="card-custom mb-4 py-3 px-4">
    <form asp-action="Index" method="get" class="row g-3 align-items-center">
        <div class="col-auto">
            <label for="statusFilter" class="col-form-label fw-bold">Filter by Status:</label>
        </div>
        <div class="col-auto">
            <select name="statusFilter" id="statusFilter" class="form-select" onchange="this.form.submit()">
                @{
                    string currentFilter = ViewBag.CurrentFilter as string;
                }
                <option value="" selected="@(string.IsNullOrEmpty(currentFilter))">-- Show All --</option>
                <option value="New" selected="@(currentFilter == "New")">New</option>
                <option value="In Progress" selected="@(currentFilter == "In Progress")">In Progress</option>
                <option value="Resolved" selected="@(currentFilter == "Resolved")">Resolved</option>
            </select>
        </div>
        <div class="col-auto">
            <!-- Optional: Reset button -->
            <a asp-action="Index" class="btn btn-secondary">Reset</a>
        </div>
    </form>
</div>

<!-- Complaints Table -->
<div class="table-container">
    <table class="table table-hover mb-0">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Location)</th>
                <th>Image</th>
                <th>@Html.DisplayNameFor(model => model.IssueType)</th>
                <th>Status</th>
                <th>Date</th>
                <th>Description</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
@foreach (var item in Model) {
            <tr>
                <td class="fw-bold">
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="@item.ImagePath" style="width: 50px; height: 50px; object-fit: cover; border-radius: 6px; cursor: pointer;" 
                             onclick="window.open(this.src)" title="Click to view full size" />
                    }
                    else
                    {
                        <span class="text-muted small">No Img</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IssueType)
                </td>
                <td>
                    @{
                        var statusClass = item.Status switch {
                            "New" => "status-new",
                            "In Progress" => "status-progress",
                            "Resolved" => "status-resolved",
                            _ => "status-new"
                        };
                    }
                    <span class="status-badge @statusClass">
                        @Html.DisplayFor(modelItem => item.Status)
                    </span>
                </td>
                <td style="font-size: 0.9em;">
                    @item.RegisteredTime.ToString("MMM dd, HH:mm")
                </td>
                <td>
                    <span class="d-inline-block text-truncate" style="max-width: 200px;" title="@item.Description">
                        @item.Description
                    </span>
                </td>
                <td class="text-end">
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    </div>
                </td>
            </tr>
}
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="text-center mt-5">
        <h4 class="text-muted">No complaints found.</h4>
    </div>
}